    <style name="ToolbarTitleStyle">
        <item name="android:fontFamily">@font/smooth_line_7</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">@string/playlist_toolbar_text</item>
    </style>

    <style name="CircleAlbumCover">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

